{
  "name": "ui",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev storybook --parallel",
    "lint-check": "turbo run lint-check",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "release": "changeset version && pnpm install",
    "publish": "-r publish",
    "jest": "turbo run jest",
    "playwright": "turbo run playwright",
    "test": "turbo run jest playwright --parallel",
    "clean": "turbo run clean && rm -rf node_modules",
    "format-check": "prettier --check --ignore-path './.gitignore' \"**/*.+(json|md|yml)\" './'",
    "format": "prettier --write --ignore-path './.gitignore' \"**/*.+(json|md|yml)\" './'",
    "bump": "node scripts/bump.js"
  },
  "devDependencies": {
    "@actions/exec": "^1.1.1",
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.2",
    "@playwright/test": "^1.28.1",
    "eslint": "^8.29.0",
    "eslint-config-commons-ui": "workspace:2.0.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "playwright-config-commons-ui": "workspace:2.0.1",
    "prettier": "^2.8.1",
    "turbo": "^1.6.3"
  },
  "packageManager": "pnpm@7.14.0"
}
