{
  "extends": ["//"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "build-next", "build-payload"]
    },
    "build-next": {
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NEXT_PUBLIC_APP_NAME", "NEXT_PUBLIC_APP_URL"]
    },
    "build-payload": {
      "outputs": ["build/**"],
      "env": ["PAYLOAD_PUBLIC_APP_URL"]
    }
  }
}
