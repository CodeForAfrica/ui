    "promisetracker",
    "next",
    "next.js",
    "react",
    "mui"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/codeforafrica/ui.git",
    "directory": "apps/promisetracker"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/codeforafrica/ui/issues"
  },
  "scripts": {
