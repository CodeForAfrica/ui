{
  "extends": ["//"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "build-next", "build-payload"]
    },
    "build-next": {
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "CI",
        "CHARTERAFRICA_SENTRY_DSN",
        "PUBLIC_CHARTERAFRICA_SENTRY_DSN",
        "RESOURCES_SECRET_TOKEN",
        "MONGO_URL",
        "NEXT_BUILD",
        "NEXT_HOSTNAME",
        "NEXT_MANUAL_SIG_HANDLE",
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_DEFAULT_LOCALE",
        "NEXT_PUBLIC_GA_MEASUREMENT_ID",
        "NEXT_PUBLIC_IMAGE_DOMAINS",
        "NEXT_PUBLIC_LOCALES",
        "NEXT_PUBLIC_SEO_DISABLED",
        "NODE_ENV",
        "NODE_OPTIONS",
        "PAYLOAD_CORS",
        "PAYLOAD_CSRF",
        "PAYLOAD_PUBLIC_APP_NAME",
        "PAYLOAD_PUBLIC_APP_URL",
        "PAYLOAD_PUBLIC_DEFAULT_LOCALE",
        "PAYLOAD_PUBLIC_LOCALES",
        "PAYLOAD_SECRET_KEY",
        "PROJECT_ROOT",
        "S3_ACCESS_KEY_ID",
        "S3_BUCKET",
        "S3_SECRET_ACCESS_KEY",
        "S3_REGION",
        "SENDGRID_API_KEY",
        "SENDGRID_FROM_EMAIL",
        "SENDGRID_FROM_NAME"
      ]
    },
    "build-payload": {
      "outputs": ["build/**"],
      "env": [
        "CI",
        "MONGO_URL",
        "NEXT_BUILD",
        "NEXT_HOSTNAME",
        "NODE_ENV",
        "NODE_OPTIONS",
        "PAYLOAD_CORS",
        "PAYLOAD_CSRF",
        "PAYLOAD_PUBLIC_APP_NAME",
        "PAYLOAD_PUBLIC_APP_URL",
        "PAYLOAD_PUBLIC_DEFAULT_LOCALE",
        "PAYLOAD_PUBLIC_LOCALES",
        "PAYLOAD_SECRET_KEY",
        "PORT",
        "S3_ACCESS_KEY_ID",
        "S3_BUCKET",
        "S3_SECRET_ACCESS_KEY",
        "S3_REGION",
        "SENDGRID_API_KEY",
        "SENDGRID_FROM_EMAIL",
        "SENDGRID_FROM_NAME"
      ]
    }
  }
}
