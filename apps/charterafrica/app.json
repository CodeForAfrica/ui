{
  "name": "charterafrica",
  "scripts": {
    "predeploy": "export BASE_URL=$(dokku config:get charterafrica BASE_URL) && export API_KEY=$(dokku config:get charterafrica API_KEY)",
    "update-ecosystem-resource": "curl -H \"x-api-key: $API_KEY\" $BASE_URL/api/v1/resources/update-ecosystem-resource",
    "create-ecosystem-resource": "curl -H \"x-api-key: $API_KEY\" $BASE_URL/api/v1/resources/create-ecosystem-resource"
  },
  "cron": [
    {
      "command": "npm run update-ecosystem-resource",
      "schedule": "@daily"
    },
    {
      "command": "npm run create-ecosystem-resource",
      "schedule": "@hourly"
    }
  ]
}
