{
  "name": "charterafrica",
  "scripts": {
    "predeploy": "export PAYLOAD_PUBLIC_APP_URL=$(dokku config:get charterafrica PAYLOAD_PUBLIC_APP_URL) && export PAYLOAD_SECRET_KEY=$(dokku config:get charterafrica PAYLOAD_SECRET_KEY)",
    "update-ecosystem-resource": "curl -H \"x-api-key: $PAYLOAD_SECRET_KEY\" $PAYLOAD_PUBLIC_APP_URL/api/v1/resources/update-ecosystem-resource",
    "create-ecosystem-resource": "curl -H \"x-api-key: $PAYLOAD_SECRET_KEY\" $PAYLOAD_PUBLIC_APP_URL/api/v1/resources/create-ecosystem-resource"
  },
  "cron": [
    {
      "command": "npm run update-ecosystem-resource",
      "schedule": "@daily"
    },
    {
      "command": "npm run create-ecosystem-resource",
      "schedule": "@hourly"
    }
  ]
}
