{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "codeforafrica#build": {
      "dependsOn": [
        "^build",
        "$NEXT_PUBLIC_APP_URL",
        "$NEXT_PUBLIC_IMAGE_DOMAINS"
      ],
      "outputs": [".next/**"]
    },
    "jest": {
      "inputs": ["src/**/*.js"],
      "outputs": []
    },
    "playwright": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.js"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.js"],
      "outputs": []
    },
    "lint-check": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "storybook": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": ["$GITHUB_TOKEN"]
}
